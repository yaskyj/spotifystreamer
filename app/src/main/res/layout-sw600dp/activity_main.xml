<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="org.justinrogers.spotifystreamer.MainActivity">

    <fragment
        android:id="@+id/artist_fragment"
        android:name="org.justinrogers.spotifystreamer.ArtistsSearchFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@android:layout/list_content" />

    <LinearLayout
        android:id="@+id/artist_track_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/list_background"
        android:layout_weight="4">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artist_track_list"
            android:layout_marginTop="0dp" />
    </LinearLayout>
</LinearLayout>